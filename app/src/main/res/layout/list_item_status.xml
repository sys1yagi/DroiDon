<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <!-- TODO -->
        <variable name="status" type="com.sys1yagi.mastodon.android.ui.navigation.TimelineStatus"/>
    </data>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
            <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:placeholderImage="@mipmap/ic_launcher_round"
            />
            <TextView
                    android:id="@+id/display_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="@{status.entity.account.displayName}"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@+id/icon"
                    tools:text="display name"/>
            <TextView
                    android:id="@+id/user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="@{status.entity.account.acct}"
                    android:textColor="@color/gray"
                    android:ellipsize="end"
                    app:layout_constraintLeft_toRightOf="@+id/display_name"
                    tools:text="user name"/>
            <TextView
                    android:id="@+id/created_at"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@{status.elapsed(context, System.currentTimeMillis())}"
                    android:textColor="@color/gray"
                    app:layout_constraintLeft_toRightOf="@+id/user_id"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="3分前"/>
            <TextView
                    android:id="@+id/content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@{status.content()}"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toLeftOf="@+id/display_name"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/display_name"
                    tools:text="content content content content content content content content content content content content content content content content"
            />
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="@id/content"
                    app:layout_constraintTop_toBottomOf="@+id/content">
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_reply_black_24dp"
                />
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_repeat_black_24dp"
                />
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_favorite_black_24dp"
                />
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_more_horiz_black_24dp"
                />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</layout>
